@model Users

<form method="post">

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create User</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div> <!--shows a summary of all error messages at the top of the screen-->
		<div class="mb-3 p-1">
			<label asp-for="UserName" class="p-0"></label>
			<input asp-for="UserName" type="text" class="form-control" />
			<span asp-validation-for="UserName" class="text-danger"></span> <!-- show error messages -->
		</div>
		<div class="mb-3 p-1">
			<label asp-for="Password" class="p-0"></label>
			<input asp-for="Password" type="text" class="form-control" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
	</div>
	<div class="row">
		<div class="col-6 col-md-3">
			<button type="submit" class="btn btn-primary form-control">Create</button>
		</div>
		<div class="col-6 col-md-3">
			<a asp-controller="Home" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
		</div>
	</div>

</form>