@model Category 

<form method = "post">  <!--The view is defined with method post, so the create method can be invoked once the user submits the values filled in the form-->
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div> <!--shows a summary of all error messages at the top of the screen-->
		<div class="mb-3 p-1">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span> <!-- show error messages -->
		</div>
		<div class="mb-3 p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" type="number" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
	</div>
	<div class="row">
		<div class="col-6 col-md-3">
			<button type="submit" class="btn btn-primary form-control">Create</button>
		</div>
		<div class="col-6 col-md-3">
			<a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
		</div>
	</div>
	<!-- We add the partial view to do client side validations-->
</form>

@section Scripts {

	@{
		<partial name = "_ValidationScriptsPartial"/>
	}

}
